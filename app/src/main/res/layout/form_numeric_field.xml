<?xml version="1.0" encoding="utf-8"?>

<org.unicef.rapidreg.widgets.NumericField xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/form_label" />

    <org.unicef.rapidreg.widgets.VerifyWithoutPopupEditText
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:editable="true"
        android:inputType="number|numberDecimal"
        android:padding="5dip"
        android:singleLine="true" />

    <include layout="@layout/form_help_text" />

</org.unicef.rapidreg.widgets.NumericField>