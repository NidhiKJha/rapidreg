<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/dialog_titlebar" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dialog_title_padding"
        android:paddingRight="@dimen/dialog_title_padding"
        android:textSize="@dimen/progress_dialog_message_text_size"/>

    <FrameLayout
        android:id="@+id/dialog_custom_view_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/dialog_button" />

</LinearLayout>